@import '../../../../../static/stylus/modules/_variables.styl'

li
    figure
        display flex
        display -ms-flexbox
        justify-content center
        width 100%
        height 100%
        -ms-flex-pack center
        img
            height 100%
            width auto
    .detail-new
        bottom 0
        position absolute
        right 0
        z-index 3
        width 100%
        p
            font-family $rajdhani_bold
            font-size 14px
            margin 0
        h2
            font-family $roboto_cond_bold
            font-size 24px
            line-height 24px
            padding 0 15px
            margin-top 20px
        .social-buttons
            margin 20px auto
            a:hover
                color white
@media screen and (min-width: 568px)
    li
        figure
            img
                height 110%
                width 100%
@media screen and (min-width: 768px)
    li
        figure
            img
                height 100%
                width auto
    .first
        figure
            position relative
            height 150%
            width 100%
@media screen and (min-width: 960px)
    li
      a
          text-decoration none
    .first
        figure
            img
                height auto
                top -15%
                width 100%
