li
    a(:href="item.url").btn-new
        figure
            img(:src="item.image")
        div.layer-shadow
        div.detail-new
            p.text-uppercase.text-mustard-light
                | {{ item.tag }}
                span.text-white / {{ item.date }}
            h2.text-uppercase.text-white {{ item.title }}
            div.social-buttons
                a.text-white.icon-facebook(href="#")
                a.text-white.icon-twitter(href="#")
                a.text-white.icon-gplus(href="#")
