@import '../../../static/stylus/modules/_variables.styl'

.profile-desk
    display none
.user-profile
    align-items center
    display flex
    display -ms-flexbox
    padding 35px 10px
    -ms-flex-align center
    .icon-user-o
        color $gray-user-menu
        border-color $gray-user-menu
    .data-user
        line-height 20px
        margin-left 10px
        p
            margin 0
            &:first-child
                font-family $rajdhani_bold
                font-size 20px
                font-weight 700
                text-align left
            &:last-child
                font-family $rajdhani_medium
                font-size 14px
                font-weight 500
@media screen and (min-width: 1200px)
    .col-lg-4
        padding 0
    .profile-mobile
        display none
    .profile-desk
        display block
    .user-profile
        background none !important
        padding 0
        // display none
    .buttons-login-register
        display flex
        display -ms-flexbox
        float none
        justify-content space-between
        margin-left 30px
        padding 0
        -ms-flex-pack justify
        .btn
            border 1px solid $white
            font-family $roboto_regular
            font-size 11px
            margin 0 -5px
            &:first-child
                padding 15px 36px
            &:last-child
                padding 15px 40px
            &:focus
            &:hover
                color white
                text-decoration none
    .profile-points
        align-items center
        display flex
        display -ms-flexbox
        border-left 1px solid $gray-circle
        margin-left 30px
        padding 11px 0
        padding-left 20px
        -ms-flex-align center
        .box-profile
            display flex
            display -ms-flexbox
            flex-direction column
            -ms-flex-direction column
            .logout
                line-height 15px
                color white
                text-decoration underline
                font-family $rajdhani_regular
        .btn-profile
            font-family $roboto_regular
            font-size 12px
            span
                font-family $roboto_bold
            // .logout

        .btn-points
            background $red-btn
            font-family $roboto_bold
            font-size 18px
            margin-left 20px
            padding 11px 47px
            span
                font-family $roboto_regular
                font-size 14px
        a:hover
            color white
            text-decoration none
