@import '../../../static/stylus/modules/_variables.styl'

.score-user
    display block
    text-align center
    h3
        font-family $rajdhani_semibold
        font-size 17px
        margin 14px auto 15px auto
.slider-home
    position relative
    .container-slider
        .list-slider
            .slide,
            li
                height 400px
                .img-slider
                    height 100%
                    img
                        height 100%
                        width 100%
                .box-text-slider
                    position absolute
                    top 0
                    left 0
                    text-align center
                    width 100%
                    margin-top 50px
                    h2
                    h4
                        font-family $rajdhani_medium
                    h1
                        font-family $rajdhani_bold
                        font-size 50px
                        line-height 1
                        margin 0
                        span
                            display block
                    h2
                        font-size 24px
                        font-weight 500
                        margin-bottom 0
                    h4
                        font-size 18px
                        font-weight 500
                        margin-top 0
                        margin-bottom 15px
                    .btn
                        display block
                        font-family $rajdhani_bold
                        font-weight bold
                        margin 0 auto
                        padding 11px 0
                        width 231px
                        &:hover
                            color white
                            text-decoration none
            .agile__dots
                bottom 0
                left 50%
                position absolute
                transform translateX(-50%)
                display flex
                display -ms-flexbox
                justify-content space-between
                margin 5px auto 20px auto
                -ms-flex-pack justify
                .agile__dot
                    height auto
                    margin 5px
                    button
                        appearance none
                        -webkit-appearance none
                        -moz-appearance none
                        border 1px solid $white
                        border-radius 50%
                        background transparent
                        width 15px
                        height 15px
                .agile__dot.agile__dot--current
                    button
                        background $yellow-mustard
                        border-color $yellow-mustard
                        border-radius 50%
                        color $yellow-mustard
            .agile__arrow
                appearance none
                background transparent
                border none
                bottom -37px
                position absolute
                width 30px
                z-index 5
                -webkit-appearance none
                svg
                    fill $white
            .agile__arrow.agile__arrow--next
                right 0
            .agile__arrow.agile__arrow--prev
                right 30px
    .box-bullets
        bottom 0
        position absolute
        width 100%
        ul
            display flex
            display -ms-flexbox
            justify-content space-between
            margin 5px auto 20px auto
            width 65px
            -ms-flex-pack justify
            .item-bullet
                a
                    color $gray-circle
            .item-bullet.active
                a
                    background $yellow-mustard
                    border-radius 50%
                    color $yellow-mustard
.sec-alert-notification
    .alert-notification
        padding-bottom 14px
        padding-top 14px
        text-align center
        p
            display inline-block
            font-family $rajdhani_semibold
            font-size 19px
            margin 0 0 0 5px
    .alert-description
        padding-bottom 10px
        padding-top 10px
        text-align center
        p
            font-family $rajdhani_medium
            font-size 17px
            margin 0
.sec-pronostic-dates
    padding-left 10px
    padding-right 10px
    margin-bottom 30px
    .title-pronostic
        font-family $rajdhani_bold
        font-size 24px
        line-height 24px
        margin-top 150px
        padding: 0 7px
        text-align center
    .red-line
        margin 0 auto
        width 50px
    .box-select-groups
        padding 0
.sec-news
    h4
        font-family $rajdhani_bold
        font-size 24px
        margin-top 50px
        margin-bottom 20px
        text-align center
    .red-line
        margin 0 auto
        width 50px
    .sec-btn-more
        padding-left 10px
        padding-right 10px
        a
            margin-top 10px
            text-align center
            &:hover
                color white
                cursor pointer
                text-decoration none
@media screen and (min-width: 400px)
    .slider-home
        .container-slider
            .list-slider
                li
                    .box-text-slider
                        padding 0 20px
@media screen and (min-width: 568px)
    // .sec-pronostic-dates
    //     .box-select-groups
    //         .box-slider-groups
    //             .container-list-dates
    //                 max-width 480px

    .slider-home
        .container-slider
            .list-slider
                li
                    .box-text-slider
                        h1
                            span
                                display inline
@media screen and (min-width: 768px)
    .slider-home
        .container-slider
            .list-slider
                li
                    height 385px
    .sec-alert-notification
        .alert-notification
            padding-bottom 8px
            padding-top 9px
        .alert-description
            text-align left
    .sec-pronostic-dates
        padding-left 15px
        padding-right 16px
        .title-pronostic
            margin-top 70px
    .sec-news
        padding 0 20px
        .sec-btn-more
            padding 0
@media screen and (min-width: 1200px)
    .slider-home
        margin-top 22px
    .sec-pronostic-dates
        float none
        padding-top 60px
        .title-pronostic
            float none
            margin-top 15px
        .red-line
            margin 0 auto 30px auto
            float none
        .box-select-groups
            padding 0
            float none
