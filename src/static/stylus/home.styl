@import './modules/_base.styl'

.score-user
    display block
    text-align center
    h3
        font-family $rajdhani_semibold
        font-size 17px
        margin 14px auto 15px auto
.slider-home
    position relative
    .container-slider
        .list-slider
            .slide,
            li
                height 400px
                .img-slider
                    height 100%
                    img
                        height 100%
                        width 100%
                .box-text-slider
                    position absolute
                    top 0
                    left 0
                    text-align center
                    width 100%
                    margin-top 50px
                    h2
                    h4
                        font-family $rajdhani_medium
                    h1
                        font-family $rajdhani_bold
                        font-size 50px
                        line-height 1
                        margin 0
                        span
                            display block
                    h2
                        font-size 24px
                        font-weight 500
                        margin-bottom 0
                    h4
                        font-size 18px
                        font-weight 500
                        margin-top 0
                        margin-bottom 15px
                    .btn
                        display block
                        font-family $rajdhani_bold
                        font-weight bold
                        margin 0 auto
                        padding 11px 0
                        width 231px
                        &:hover
                            color white
                            text-decoration none
            .agile__dots
                bottom 0
                left 50%
                position absolute
                transform translateX(-50%)
                display flex
                display -ms-flexbox
                justify-content space-between
                margin 5px auto 20px auto
                -ms-flex-pack justify
                .agile__dot
                    height auto
                    margin 5px
                    button
                        appearance none
                        -webkit-appearance none
                        -moz-appearance none
                        border 1px solid $white
                        border-radius 50%
                        background transparent
                        width 15px
                        height 15px
                .agile__dot.agile__dot--current
                    button
                        background $yellow-mustard
                        border-color $yellow-mustard
                        border-radius 50%
                        color $yellow-mustard
            .agile__arrow
                appearance none
                background transparent
                border none
                bottom -37px
                position absolute
                width 30px
                z-index 5
                -webkit-appearance none
                svg
                    fill $white
            .agile__arrow.agile__arrow--next
                right 0
            .agile__arrow.agile__arrow--prev
                right 30px
    .box-bullets
        bottom 0
        position absolute
        width 100%
        ul
            display flex
            display -ms-flexbox
            justify-content space-between
            margin 5px auto 20px auto
            width 65px
            -ms-flex-pack justify
            .item-bullet
                a
                    color $gray-circle
            .item-bullet.active
                a
                    background $yellow-mustard
                    border-radius 50%
                    color $yellow-mustard
.sec-alert-notification
    .alert-notification
        padding-bottom 14px
        padding-top 14px
        text-align center
        p
            display inline-block
            font-family $rajdhani_semibold
            font-size 19px
            margin 0 0 0 5px
    .alert-description
        padding-bottom 10px
        padding-top 10px
        text-align center
        p
            font-family $rajdhani_medium
            font-size 17px
            margin 0
.sec-pronostic-dates
    padding-left 10px
    padding-right 10px
    margin-bottom 30px
    .title-pronostic
        font-family $rajdhani_bold
        font-size 24px
        line-height 24px
        margin-top 150px
        padding: 0 7px
        text-align center
    .red-line
        margin 0 auto
        width 50px
    .box-select-groups
        padding 0
        .phases-names-mob
            p
                font-family $rajdhani_semibold
                font-weight 400
        .phases-names-desk
            display none
        .box-slider-groups
            align-items center
            display flex
            display -ms-flexbox
            justify-content center
            padding 0
            -ms-flex-align center
            -ms-flex-pack center
            .btn-arrow
                font-size 17px
                padding 29.5px 7px
            .container-list-dates
                overflow hidden
                max-width 240px
                .list-dates
                    border-bottom 0.5px solid $red-btn
                    border-top 0.5px solid $red-btn
                    display flex
                    display -ms-flexbox
                    list-style none
                    .item-date
                        .date
                            margin-top 5px
                            margin-bottom 5px
                        .game
                            background $gray-light3
                            border-radius 5px
                            margin-bottom 1px
                        div
                            padding-left 10px
                            padding-right 10px
                            p
                                font-size 14px
                                margin 0
                                text-align center
                            .number
                                font-size 17px
                    .item-date:not(:last-child)
                        .date
                            border-right 0.5px solid $red-btn
                        .game
                            border-right 1px solid $gray-light2
.sec-play-now
    padding-bottom 32px
    padding-top 36px
    text-align center
    p
        font-size 17px
        margin 0
        text-transform uppercase
    .social-buttons
        a:hover
            color white
    .group-game-user
        display flex
        display -ms-flexbox
        flex-direction column
        margin-bottom 14px
        -ms-flex-direction column
        div
            p:nth-child(1),
            p:nth-child(2)
                font-family $rajdhani_bold
            p:first-child
                span
                    display none
        p:last-child
            font-family $rajdhani_regular
    .match,
    .detail-game
        float none
    .detail-game
        p:nth-child(1),
        p:last-child
            font-family $rajdhani_medium
        p:nth-child(2)
            font-family $rajdhani_bold
        p
            span
                color $white
                display none
.sec-matches
    text-align center
    .item-match
        margin-top 30px
        .group-date
            p
                font-family $rajdhani_bold
                font-size 17px
                span
                    font-family $rajdhani_medium
        .match
            .teams-score
                .box-country
                    .name-country-percent
                        bottom -20px
            .social-buttons
                a.icon-twitter:hover
                    color $blue-twitter
                a.icon-gplus:hover
                    color $red-gplus
        .box-buttons
            margin-top 35px
            padding-left 10px
            padding-right 10px
            a.btn-mobile
                margin-top 10px
                &:hover
                    color white
                    text-decoration none
        .box-ribbon
            margin-top 40px
        .group-game-user
            p
                font-size 17px
                margin 0
            p:nth-child(1),
            p:nth-child(2) span,
            p:last-child span
                font-family $rajdhani_bold
            p:nth-child(2),
            p:last-child
                font-family $rajdhani_medium
.sec-news
    h4
        font-family $rajdhani_bold
        font-size 24px
        margin-top 50px
        margin-bottom 20px
        text-align center
    .red-line
        margin 0 auto
        width 50px
    .list-news
        margin-top 30px
        li.item-new
            position relative
            height 340px
            margin 10px auto 0 auto
            overflow hidden
            text-align center
            // width 300px
            width 95%
            figure
                display flex
                display -ms-flexbox
                justify-content center
                width 100%
                height 100%
                -ms-flex-pack center
                img
                    height 100%
                    width auto
            .detail-new
                bottom 0
                position absolute
                right 0
                z-index 3
                width 100%
                p
                    font-family $rajdhani_bold
                    font-size 14px
                    margin 0
                h2
                    font-family $roboto_cond_bold
                    font-size 24px
                    line-height 24px
                    padding 0 15px
                    margin-top 20px
                .social-buttons
                    margin 20px auto
                    a:hover
                        color white
    .sec-btn-more
        padding-left 10px
        padding-right 10px
        a
            margin-top 10px
            text-align center
            &:hover
                color white
                cursor pointer
                text-decoration none
@media screen and (min-width: 400px)
    .slider-home
        .container-slider
            .list-slider
                li
                    .box-text-slider
                        padding 0 20px
@media screen and (min-width: 568px)
    .sec-pronostic-dates
        .box-select-groups
            .box-slider-groups
                .container-list-dates
                    max-width 480px
    .sec-matches
        .list-matches
            .item-match
                position relative
                .match
                    .social-buttons
                        position absolute
                        top 0
                        right 15px
                    .teams-score
                        .box-country
                            .name-country-percent
                                position static
    .sec-news
        .list-news
            li.item-new
                figure
                    img
                        height 110%
                        width 100%
    .sec-play-now
        position relative
        .social-buttons
            position absolute
            top 35px
            right 25px
    .slider-home
        .container-slider
            .list-slider
                li
                    .box-text-slider
                        h1
                            span
                                display inline
@media screen and (min-width: 768px)
    .slider-home
        .container-slider
            .list-slider
                li
                    height 385px
    .sec-alert-notification
        .alert-notification
            padding-bottom 8px
            padding-top 9px
        .alert-description
            text-align left
    .sec-pronostic-dates
        padding-left 20px
        padding-right 20px
        .title-pronostic
            margin-top 70px
        .box-select-groups
            .box-slider-groups
                .btn-arrow
                    font-size 24px
                    padding 26.5px 14px
                .container-list-dates
                    max-width 708px
    .sec-play-now
        margin-left 20px
        margin-right 20px
        .group-game-user
            margin-bottom 0
            div
                p:first-child
                    text-align right
                    padding 0
                    padding-right 10px
                    span
                        display inline
                        margin-left 10px
                p:nth-child(2)
                    padding-left 5px
                    text-align left
        .match
            margin-top 0
        .detail-game
            display flex
            display -ms-flexbox
            justify-content center
            -ms-flex-pack center
            p
                span
                    display inline
                    margin 0 8px
    .sec-matches
        .list-matches
            padding 0 10px
            .item-match
                margin 15px 10px 0 10px
                & > div:first-child
                    border-left 1px solid $gray-light2
                    border-right 1px solid $gray-light2
                    border-top 1px solid $gray-light2
                    padding-bottom 10px
                .box-buttons
                    display flex
                    display -ms-flexbox
                    margin 0
                    padding 0
                    a
                        margin-top 0
                .box-ribbon
                    margin-top 0
                .match
                    .social-buttons
                        top 17px
                .group-date
                    p
                        margin-bottom 0
                .group-game-user
                    display flex
                    display -ms-flexbox
                    justify-content center
                    -ms-flex-pack center
                    p
                        margin-top 17px
                        span
                            color black
                            margin-left 3px
                            margin-right 3px
    .sec-news
        padding 0 20px
        .list-news
            li.item-new.first-note
                width 100%
                figure
                    img
                        height 150%
                        position absolute
                        top -30%
                        width 100%
            li.item-new
                display inline-block
                width 345px
                figure
                    position relative
                    img
                        height 100%
                        width auto
                &:nth-child(even)
                    margin-right 15px
        .sec-btn-more
            padding 0
@media screen and (min-width: 800px)
    .sec-news
        .list-news
            ul
                li.item-new:not(.first-note)
                    width 370px
@media screen and (min-width: 960px)
    .sec-news
        .list-news
            ul
                display flex
                display -ms-flexbox
                flex-wrap wrap
                -ms-flex-wrap wrap
                li.item-new.first-note
                    margin-left 0
                    width 590px
                    figure
                        img
                            height auto
                            top -15%
                            width 100%
                li.item-new:not(.first-note)
                    width 286px
                    a
                        text-decoration none
                    &:nth-child(even),
                    &:nth-child(odd)
                        margin-right 0
                    &:nth-child(3)
                        margin-left 0
@media screen and (min-width: 1024px)
    .sec-pronostic-dates
        .box-select-groups
            .box-slider-groups
                .container-list-dates
                    max-width 766px
@media screen and (min-width: 1200px)
    .slider-home
        margin-top 22px
    .sec-pronostic-dates
        float none
        padding-top 60px
        .title-pronostic
            float none
            margin-top 15px
        .red-line
            margin 0 auto 30px auto
            float none
        .box-select-groups
            padding 0
            float none
            .phases-names-mob
                display none
            .phases-names-desk
                display block
                float none
                .list-phases
                    display flex
                    display -ms-flexbox
                    justify-content space-between
                    margin-bottom 20px
                    padding 0
                    -ms-flex-pack justify
                    .item-phase
                        height 10px
                        position relative
                        padding 20px 0
                        transition .5s
                        .phase-name
                            color $gray-light2
                            font-family $rajdhani_medium
                            position absolute
                            top -5px
                            left -100%
                            width 100px
                        .bullet-phase
                            border 4px solid $gray-light2
                            border-radius 50%
                            display block
                            height 12px
                            position relative
                            width 12px
                        &:hover
                            .phase-name
                                color $red-btn
                                cursor pointer
                            .bullet-phase
                                border-color $red-btn
                                cursor pointer
                                transform scaleY(1.4)
                                width 16px
                            &:not(:first-child)
                                .bullet-phase
                                    &:after
                                        background $red-btn
                                        height 3px
                                        right 9px
                        &:not(:first-child)
                            .bullet-phase
                                &:after
                                    background $gray-light2
                                    content ""
                                    display block
                                    height 4px
                                    width 161px
                                    position absolute
                                    right 4px
                    .item-phase.active
                        .bullet-phase
                            border-color $red-btn
                            transform scaleY(1.4)
                            width 16px
                            &:after
                                background $red-btn
                                height 3px
                                right 9px
                    .item-phase.current
                        .phase-name
                            color $red-btn
            .box-slider-groups
                border-left 0.5px solid $red-btn
                border-right 0.5px solid $red-btn
                float none
                padding 0
                .btn-arrow
                    display none
                .container-list-dates
                    max-width 935px
                    .list-dates
                        .item-date
                            div
                                padding-left 23.2px
                                padding-right 23.3px
                            &:hover
                                background $red-btn
                                color $white
                                cursor pointer
                                .game
                                    background $red-btn
                                    p
                                        color $white
